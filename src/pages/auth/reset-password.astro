---
// ============================================================================
// Reset Password Page
// ============================================================================
// Request password reset email

import Layout from '@/layouts/Layout.astro';
import { ResetPasswordForm } from '@/components/auth/ResetPasswordForm';

// Check if we're coming back after sending email
const emailSent = Astro.url.searchParams.get('sent') === 'true';
---

<Layout title="Resetowanie hasła — AI Tutor">
  <main class="min-h-screen flex items-center justify-center bg-background p-4">
    <ResetPasswordForm client:load emailSent={emailSent} />
  </main>
</Layout>
